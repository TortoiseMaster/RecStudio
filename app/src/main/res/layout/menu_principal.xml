<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <Button
        android:text="sERIES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonSeries" />

    <Button
        android:text="Peliculas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonPeliculas" />

    <Button
        android:text="Amigos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonAmigos" />

    <Button
        android:text="Cambiar nombre de usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonCambiarNombre" />

    <Button
        android:text="Contactar administrador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonContactarAdmin" />

</LinearLayout>